<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
		
		<title>글 쓰기</title>
		
  		<link href="/public/semantic.min.css" rel="stylesheet" >
		 
		<style>
			* {
				padding:0;
				margin:0;
				box-sizing:border-box;
			}
			
			html {
				width:100%;
				height:100%;
			}
			
			body {
				width:100%;
				height:100%;
				color: #000;
				background-color: #fff;
			}
					
			.container {
				margin-right: auto;
				margin-left: auto;
				padding-left: 20px;
				padding-right: 20px;
			}
	
			span {
				color: #333;
			}
	  
			#board_title {
				font-size:1.2em;
				font-weight:bold;
				color:teal;
			}
	  
		</style>
		<script src="/public/jquery-3.1.1.min.js"></script>
		<script src="/public/semantic.min.js"></script>
		<script type="text/javascript" src="/public/dist/js/service/HuskyEZCreator.js" charset="utf-8"></script>

		<script type="text/javascript">
		
			var oEditors = [];
			$.getScript("/public/dist/js/service/HuskyEZCreator.js",function(){
				
			nhn.husky.EZCreator.createInIFrame({
			 oAppRef: oEditors,
			 elPlaceHolder: "contents",
			 sSkinURI: "/public/dist/SmartEditor2Skin.html",
			 fCreator: "createSEditor2"
			});
			
		});
		
		function pasteHTML(path) {
			var sHTML = '<span><img src="/uploads/'+path+'"></span>';
			//var sHTML = '<img style="width=100px !important" src="/public/uploads/'+path+'"/>'
			oEditors.getById["contents"].exec("PASTE_HTML", [sHTML]);
		}
		
		function showHTML() {
			var sHTML = oEditors.getById["contents"].getIR();
			alert(sHTML);
		}

		// ‘저장’ 버튼을 누르는 등 저장을 위한 액션을 했을 때 submitContents가 호출된다고 가정한다.
		function submitContents() {
		// 에디터의 내용이 textarea에 적용된다.
		oEditors.getById["contents"].exec("UPDATE_CONTENTS_FIELD", []);
		
		// 에디터의 내용에 대한 값 검증은 이곳에서
		// document.getElementById("ir1").value를 이용해서 처리한다.
		};
			</script>
				<!-- <script type="text/javascript" src="/public/dist/js/service/SE2M_Configuration.js" charset="utf-8"></script> -->
			<script type="text/javascript" src="/public/dist/js/hp_SE_QuickEditor_Image.js" charset="utf-8"></script>
			
			<script type="text/javascript" >
			window.onload=function(){
				var win;
				document.getElementById("newWIndow").onclick=function(){
					win=open("/public/dist/sample/photo_uploader/img_uploader.html","new page","width=400,height=300");
					win.moveTo(500,100);
					// win=open("../img_uploader2.html","new page","width=400,height=300");
				}
			}
			</script>

		</head>
<body>
	
    <div class="container">
	    <br>
     
		<div class="ui raised segment">
			<a class="ui blue ribbon label">게시판</a>
     			<span id="board_title">글쓰기</span>
		
				 <!-- <input type="button" onclick="pasteHTML('4.png');" value="본문에 내용 넣기" /> -->
			<div class="ui blue fluid card">
				 <div class="content">
			       		 
					<form class="content ui form" method="post" action="/process/addpost">
						<h4 class="ui dividing header">글 쓰기 입력 항목</h4>
						
						<div class="two fields">
				    		<div >
				      			<label>제목</label>
								<input type="text" style="width: 99%;" name="title"  placeholder="제목 입력">
							</div>
							<div class="field"></div>
						</div>
								
						<div id="contextfiled">
							<label>내용</label>
				    		<textarea id="contents" name="contents" class="contents" minlength="1"  rows="10" cols="80"></textarea>
							<input type="button" id="newWIndow" value="사진첨부" name="" />
							
						</div>		
				<br>
						<input class="ui submit button" type="submit" value="추가" name="" onclick="submitContents()" />
						<input class="ui button" type="button" value="취소" name="" onclick="javascript:history.back()" />
					</form>
					
					<br><br>
					
				</div>
			</div>
		</div>
 
	</div>
	
	<br><br>
	

</body>

</html>